    <tr>
      <th>http_open_timeout</th>
      <td>
        <input type="text" id="settings_rjc_http_open_timeout" 
                           value="<%= settings['rjc_http_open_timeout'].to_s %>" 
                           name="settings[rjc_http_open_timeout]" >
      </td>
    </tr>
    
        <tr>
      <th>http_read_timeout</th>
